{
  "name": "api-node-ts-jwt",
  "version": "1.0.0",
  "description": "Build basic structure to api",
  "main": "index.js",
  "scripts": {
    "start": "npm run serve",
    "serve": "node server.js",
    "build": "npm run build-ts && npm run tslint && npm run build-static ",
    "build-local": "npm run build-ts && npm run tslint && npm run build-static",
    "build-static": "ts-node copyStaticAssets.ts",
    "build-ts": "tsc",
    "tslint": "tslint -c tslint.json -p tsconfig.json --fix",
    "test": "cross-env NODE_ENV=test jest --verbose --coverage",
    "watch-test": "npm run test -- --watchAll",
    "watch-node": "nodemon dist/server.js",
    "dev": "npm run build-static && npm run tslint && concurrently -k -p \"[{name}]\" -n \"TypeScript,Node\" -c \"cyan.bold,green.bold,yellow.bold,red.bold\" \"npm run watch-ts\" \"npm run watch-node\"",
    "watch-ts": "tsc -w"
  },
  "author": "",
  "license": "ISC",
  "dependencies": {
    "cors": "^2.8.5",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "shelljs": "^0.8.4"
  },
  "devDependencies": {
    "@types/cors": "^2.8.6",
    "@types/express": "^4.17.7",
    "@types/morgan": "^1.9.1",
    "@types/shelljs": "^0.8.8",
    "concurrently": "^5.2.0",
    "morgan": "^1.10.0",
    "nodemon": "^2.0.4",
    "ts-node": "^8.10.2",
    "tslint": "^6.1.2",
    "typescript": "^3.9.7"
  }
}
